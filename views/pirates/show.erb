
<body>
<h1>Pirate</h1>
<div class="pirate">
    <p>Name: <%= @pirate.name %></p>
    <p>Pirate Weight:<%= @pirate.weight%> lbs</p>
    <p>Pirate Height: <%= @pirate.height%></p>
</div>



<h2>Display your first ship here</h2>
<% @ships.each do |ship| %>
    <div class="ship">
        <p>Ship Name: <%= ship.name %></p>
        <p>Ship Type: <%= ship.type %></p>
        <p>Ship Booty: <%= ship.booty %></p>
    </div>
<% end %>